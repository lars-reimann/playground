#include <stdio.h>

int insertsort(int *array, int length) {
    int i, j;
    int count = 0;
    for (i = 1; i < length; i++) {
        int n = array[i];
        for (j = i; j > 0; j--) {
            count++;
            if (array[j-1] <= n) {
                break;
            }
            array[j] = array[j-1];
        }
        array[j] = n;
    }
    return count;
}


int main() {
    int length;
    printf("Wie viele Zahlen sollen sortiert werden? --- ");
    scanf("%i", &length);
    
    int array[length];
    int i;
    for (i = 0; i < length; i++) {
        printf("Wert eingeben: ");
        scanf("%i", &array[i]);
    }
    
    int count = insertsort(array, length);
    
    printf("Vergleiche: %i\n", count);
    for (i = 0; i < length; i++) {
        printf("%i ", array[i]);
    }
    printf("\n");
    return 0;
}
